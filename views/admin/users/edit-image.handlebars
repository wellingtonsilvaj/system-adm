<!-- Inicio do conteudo do administrativo -->
<div class="wrapper">
    <div class="row">
        <div class="top-list">
            <span class="title-content">EDITAR IMAGEM</span>
            <div class="top-list-right">
                <a href="/users?page=1" class="btn-info">Listar</a>
                <a href="/users/view/{{data.id}}" class="btn-primary">Visualizar</a>
            </div>
        </div>

        {{>_msgAdm}}

        <div class="content-adm">
             <div class="content-adm">
                    <form class="form-adm" action="/users/edit-image" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="id" id="id" value="{{data.id}}">
                    <input type="hidden" name="imageOld" id="imageOld" value="{{data.imageOld}}">
                        
                        <div class="row-input">
                            <div class="column">
                                <label class="title-input">Imagem (500x500):<span class="text-danger">*</span></label>
                                <input type="file" name="image" id="image" class="input-adm" onchange="inputFilePriviewImg()">
                            </div>
                            <div class="column">
                                {{#if data.imageOld}}
                                <span id="preview-img">
                                    <img src="/images/users/{{data.imageOld}}" alt="Imagem" class="view-image-user">
                                    </span>
                                    {{else}}
                                    <span id="preview-img">
                                    <img src="/images/users/user.jpg" alt="Imagem" class="view-image-user">
                                    </span>
                                    {{/if}}
                                
                            </div>
                        </div>

                       
                        <p class="text-danger mb-5 fs-4">* campo obrigat√≥rio</p>

                        <input type="submit" class="btn-warning" value="Editar">
                    </form>
               
        </div>  
    </div>
</div>
<!-- Fim do conteudo do administrativo -->